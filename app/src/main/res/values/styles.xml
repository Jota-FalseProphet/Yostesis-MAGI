<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/amarillo_magi</item>
        <item name="colorOnPrimary">@color/gris_oscuro</item>
        <item name="colorSecondary">@color/amarillo_magi</item>
        <item name="colorOnSecondary">@color/blanco</item>

        <!-- Status / Navigation bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimaryDark">@color/blanco</item>
        <item name="android:navigationBarColor">@color/blanco</item>


        <!-- Tipografía por defecto -->
        <item name="android:fontFamily">@font/montserrat_regular</item>

        <!-- Estilos de componentes -->
        <item name="materialButtonStyle">@style/Widget.MAGI.Button</item>
        <item name="textAppearanceButton">@style/TextAppearance.MAGI.Button</item>
    </style>



    <!-- Botón personalizado M.A.G.I. -->
    <style name="Widget.MAGI.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gris_oscuro</item>
        <item name="backgroundTint">@color/amarillo_magi</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextAppearance.MAGI.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Estilo del menú desplegable -->
    <style name="PopupMenuTextAppearance.RightAlign" parent="TextAppearance.AppCompat.Body1">
        <item name="android:gravity">end</item> <!-- or "right" -->
        <item name="android:textAlignment">viewEnd</item>
    </style>
    <style name="PopupMenuStyle.Magi" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/blanco</item>
        <item name="android:textColor">@color/gris_oscuro</item>
        <item name="android:textAppearance">@style/PopupMenuTextAppearance.RightAlign</item>
    </style>
    <style name="ThemeOverlay.PopupMAGI" parent="ThemeOverlay.AppCompat.Light">
        <item name="popupMenuStyle">@style/PopupMenuStyle.Magi</item>
    </style>
</resources>
