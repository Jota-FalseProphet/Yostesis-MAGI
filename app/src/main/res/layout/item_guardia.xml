<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/txtGrupo"   android:textStyle="bold" android:layout_height="40dp" android:layout_width="40dp"/>
        <TextView android:id="@+id/txtFranja"   android:layout_height="40dp" android:layout_width="40dp"/>
        <Button   android:id="@+id/btnCubrir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cubrir"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
