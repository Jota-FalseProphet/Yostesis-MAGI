<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
           http://maven.apache.org/POM/4.0.0
           http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <!-- ====================================== -->
  <!-- Datos del proyecto                     -->
  <!-- ====================================== -->
  <groupId>com.magi</groupId>
  <artifactId>magi-backend</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>magi-backend</name>
  <description>API Spring Boot para el proyecto M.A.G.I</description>
  <packaging>jar</packaging>

  <!-- ====================================== -->
  <!-- Propiedades de versión centralizadas   -->
  <!-- ====================================== -->
  <properties>
    <java.version>17</java.version>
    <spring-boot.version>3.2.5</spring-boot.version>
    <postgresql.version>42.7.3</postgresql.version>
    <maven-compiler-plugin.version>3.12.1</maven-compiler-plugin.version>
  </properties>

  <!-- ====================================== -->
  <!-- Dependencias                           -->
  <!-- ====================================== -->
  <dependencies>

    <!-- Spring MVC / REST -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
      <version>${spring-boot.version}</version>
    </dependency>

    <!-- Spring Data JPA + Hibernate -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
      <version>${spring-boot.version}</version>
    </dependency>

    <!-- Driver JDBC PostgreSQL -->
    <dependency>
      <groupId>org.postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <version>${postgresql.version}</version>
      <scope>runtime</scope>
    </dependency>

    <!-- Tests -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <version>${spring-boot.version}</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <!-- ====================================== -->
  <!-- Plugins de construcción                -->
  <!-- ====================================== -->
  <build>
    <plugins>

      <!-- Spring Boot (re‑empaquetado) -->
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <version>${spring-boot.version}</version>
      </plugin>

      <!-- Compilador Java 17 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>

    </plugins>
  </build>

</project>
